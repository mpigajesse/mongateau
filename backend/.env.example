# Configuration Django pour MonGâteau

# Mode Debug (True pour développement, False pour production)
DEBUG=True

# Secret Key (changez-la en production !)
SECRET_KEY=django-insecure-change-this-in-production-mongateau-2024

# Hosts autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuration Base de Données PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=mongateau
DB_USER=postgres
DB_PASSWORD=admin
DB_HOST=localhost
DB_PORT=5432

# CORS (Frontend URLs autorisées)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
